<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dc_dark_gray"
    android:gravity="center"
    android:layout_margin="@dimen/app_tiny_margin_size"
    app:cardCornerRadius="@dimen/app_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_size"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_comic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/app_white"
            tools:text="Comic title" />

        <ImageView
            android:id="@+id/iv_comic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_tiny_margin_size"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>